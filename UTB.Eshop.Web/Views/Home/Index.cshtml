@model CarouselProductViewModel

@{
    ViewData["Title"] = "Home Page";
}
@if (Model != null && Model.Carousels != null && Model.Carousels.Count > 0)
{
    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            @for (int i = 0; i < Model.Carousels.Count; ++i)
            {
                string active = (i == 0) ? "active" : "";
                <div class="carousel-item @active">
                    <img src="@Model.Carousels[i].ImageSrc" class="d-block w-100" alt="@Model.Carousels[i].ImageAlt">
                </div>
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
}

<div class="wtextcontainer mt-3">
    <div class="row">
        <!-- Column for text -->
        <div class="col-md-8 order-md-1">
            <div class="beercontainer">
                <h1>O nás</h1>
                <p>
                    Pivotéka a Bistro Stars Hollow - duchovní oáza (nejen) pivních fajnšmekrů!
                    Myšlenkovou předlohou našeho bistra je oblíbené Lukovo bistro z ještě oblíbenějšího seriálu Gilmorova děvčata.
                    V rozporu s dobou a se vší pokorou a pečlivostí bdíme nad tím, aby forma neměla navrch před obsahem. Nemíníme se Vám proto podbízet okázalými designovými, gastronomickými ani žádnými jinými trendy a věcmi, které by ve Vás mohly vyvolat pocit, že jste a jsme lepší nebo horší, než ve skutečnosti jste a jsme.
                    Jsme obyčejné místo, kde se schází různé generace, různé honorace, popíci i metly, flinkové i floutci, oni i ony, Brandonové i Dony, milující i milovaní, malí i velcí….výškou i vědomím….ale ať už se cítíte blbě nebo dobře, tak věřte, že zde bude vždy ještě minimálně o stupeň lépe….někdy i o 11 stupňů z Humpolce!
                    Jsme totiž obyčejné místo - s pečlivě vybranou, krásnou hudbou, nekonvenční nabídkou, osobitou atmosférou a věčně zamračenou obsluhou - prostě ostrůvek úsměvně švihlé pohody v moři každodenní uspěchanosti!
                </p>
            </div>
        </div>
        <!-- Column for Facebook widget -->
        <div class="col-md-4 order-md-0">
            <div class="facebook-container">
                <div class="fb-page" data-href="https://www.facebook.com/bistroStarsHollow" data-show-posts="true" data-width="500" data-height="500" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true">
                    <blockquote cite="https://www.facebook.com/bistroStarsHollow" class="fb-xfbml-parse-ignore">
                        <a href="https://www.facebook.com/bistroStarsHollow">Pivotéka a Bistro Stars Hollow</a>
                    </blockquote>
                </div>
            </div>
        </div>
    </div>
</div>





