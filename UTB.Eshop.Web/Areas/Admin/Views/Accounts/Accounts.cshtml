@using BistroWeb.Application.ViewModels
@model IList<UserListViewModel>
@{
    ViewData["Title"] = "Správa uživatelů";
}

<h1 style="color: white;">@ViewData["Title"]</h1>
<div class="custom-form-container">
    <h2>Admin Users</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Username</th>
                <!-- Add more columns as needed -->
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Where(u => u.Roles.Contains("Admin")))
            {
                <tr>
                    <td>@user.UserName</td>
                    <td colspan="2" style="text-align: right;">
                        <div class="dropdown">
                            <i class="bi bi-three-dots-vertical dropdown-toggle" id="dropdownMenuButton_@user.Id" data-bs-toggle="dropdown" aria-expanded="false" style="cursor: pointer;"></i>
                            <ul class="dropdown-menu custom-dropdown-menu" aria-labelledby="dropdownMenuButton_@user.Id">
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Edit", new { id = user.Id })">Editovat</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#" onclick="confirmDelete('@user.Id', '@user.UserName')">Smazat</a>
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

