    <link rel="stylesheet" href="~/css/CreateBrewery.css" asp-append-version="true" />
}
@section Scripts
    {
    <script>
        function confirmDelete(id, username) {
            if (confirm(`Do you really want to delete user ${username}?`)) {
                window.location.href = `@Url.Action("Delete", "Accounts")?id=${id}`;
            }
        }
    </script>
