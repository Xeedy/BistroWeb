@model Product

@{
    ViewData["Title"] = "Vytvoření produktu";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All"></div>
    <div class="container"></div>
        <div class="mb-3">
            <label class="form-label" asp-for="Name">Název</label>
            <input class="form-control" asp-for="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="Price">Název</label>
            <input class="form-control" asp-for="Price">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="Description">Název</label>
            <input class="form-control" asp-for="Description">
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="Name">Název</label>
            <input class="form-control" asp-for="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="control-label">Brewery</label>
            <select asp-for="BreweryId" class="form-control" asp-items="ViewBag.Breweries">
                <option>--Vyberte Pivovar--</option>
            </select>
        </div>
    }

    <button type="submit" class="btn btn-primary">Potvrdit</button>
</form>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/Validations/FileContentValidation.js"></script>
}
