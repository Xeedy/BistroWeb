@model IList<Product>

@{
    ViewData["Title"] = "Administrace produktů";
}
<h1>@ViewData["Title"]</h1>

<a class="btn btn-success" asp-action="Create">Přidat pivo</a>

@{
    if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th><a asp-action="Index" asp-route-sortOrder="@("ID")">ID</a></th>
                    <th><a asp-action="Index" asp-route-sortOrder="@("Name")">Název</a></th>
                    <th><a asp-action="Index" asp-route-sortOrder="@("Brewery")">Pivovar</a></th>
                    <th><a asp-action="Index" asp-route-sortOrder="@("Price")">Cena (CZK)</a></th>
                    <th class="text-end"></th>
                    <th class="text-end"></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Id</td>
                        <td><span class="fade-overflow">@product.Name</span></td>
                        <td>@product.Brewery</td>
                        <td>@product.Description</td>
                        <td>@product.Price</td>
                        <th class="text-end">
                            <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@product.Id">Edit</a>
                        </th>
                        <th class="text-start">
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@product.Id" onclick="return ConfirmDelete();">Del</a>
                        </th>
                    </tr>
                }

            </tbody>
        </table>
    }
}
@section Styles
    {
    <link rel="stylesheet" href="~/css/menu.css" asp-append-version="true" />
}
@section Scripts
    {
    <script src="~/js/dialogs.js"></script>
}
