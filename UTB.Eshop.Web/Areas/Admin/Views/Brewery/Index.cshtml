@model IList<Brewery>

@{
    ViewData["Title"] = "Administrace pivovarů";
}
<h1 style="color: white;">@ViewData["Title"]</h1>
<div class="custom-form-container">
    <a class="btn btn-success" asp-action="Create">Přidat pivovar</a>

    @{

        if (Model != null && Model.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th><a asp-action="Index" asp-route-sortOrder="@("ID")">ID</a></th>
                        <th><a asp-action="Index" asp-route-sortOrder="@("Name")">Název</a></th>
                        <th class="text-end"></th>
                        <th class="text-end"></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var brewery in Model)
                    {
                        <tr>
                            <td>@brewery.Id</td>
                            <td><span class="fade-overflow">@brewery.Name</span></td>
                            <td colspan="2" style="text-align: right;">
                                <div class="dropdown">
                                    <i class="bi bi-three-dots-vertical dropdown-toggle" id="dropdownMenuButton_@brewery.Id" data-bs-toggle="dropdown" aria-expanded="false" style="cursor: pointer;"></i>
                                    <ul class="dropdown-menu custom-dropdown-menu" aria-labelledby="dropdownMenuButton_@brewery.Id">
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("Edit", new { id = brewery.Id })">Editovat</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("Delete", new { id = brewery.Id })" onclick="return ConfirmDelete();">Smazat</a>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        }
    }
</div>
@section Styles
    {
    <link rel="stylesheet" href="~/css/CreateBrewery.css" asp-append-version="true" />
}
@section Scripts
    {
    <script src="~/js/dialogs.js"></script>
}
