@model Brewery

@{
    ViewData["Title"] = "Vytvoření pivovaru";
}

<h1 style="color: white;">@ViewData["Title"]</h1>

<div class="custom-form-container">
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label class="form-label" asp-for="Name">Název pivovaru</label>
            <input class="form-control" asp-for="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="Description">Popisek pivovaru</label>
            <input class="form-control" asp-for="Description">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="Image">Obrázek pivovaru</label>
            <input id="fileupload" class="form-control-file" asp-for="Image" type="file">
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Potvrdit</button>
    </form>
</div>

@section Styles
    {
    <link rel="stylesheet" href="~/css/CreateBrewery.css" asp-append-version="true" />
}
@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/Validations/FileContentValidation.js"></script>
}
