@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

@section Styles
{
    <link rel="stylesheet" href="~/css/login.css" />
}
<div id="logreg-forms">
    <form asp-action="Register" method="post" class="form-signup">
        <p style="text-align:center">Zaregistrovat se</p>
        <hr>

        <div asp-validation-summary="All" class="text-danger"></div>

        <input asp-for="Username" type="text" id="user-name" class="form-control" placeholder="Uživatelské jméno" autofocus="">
        <span asp-validation-for="Username" class="text-danger"></span>
        <input asp-for="FirstName" type="text" id="first-name" class="form-control" placeholder="Jméno" autofocus="">
        <span asp-validation-for="FirstName" class="text-danger"></span>
        <input asp-for="LastName" type="text" id="last-name" class="form-control" placeholder="Přijímení" autofocus="">
        <span asp-validation-for="LastName" class="text-danger"></span>
        <input asp-for="Email" type="email" id="user-email" class="form-control" placeholder="Email" autofocus="">
        <span asp-validation-for="Email" class="text-danger"></span>
        <input asp-for="Phone" type="tel" id="user-phone" class="form-control" placeholder="Telefon" autofocus="">
        <span asp-validation-for="Phone" class="text-danger"></span>
        <br />
        <input asp-for="Password" type="password" id="user-pass" class="form-control" placeholder="Heslo" autofocus="">
        <span asp-validation-for="Password" class="text-danger"></span>
        <input asp-for="RepeatedPassword" type="password" id="user-repeatpass" class="form-control" placeholder="Heslo znovu" autofocus="">
        <span asp-validation-for="RepeatedPassword" class="text-danger"></span>
        <br />

        <div class="text-center">
            <button class="btn btn-primary btn-block" type="submit"><i class="fas fa-user-plus"></i> Zaregistrovat se </button>
        </div>

        <br />
        <br />
        <hr>
        <div class="login-prompt" style="text-align: center; display: flex; justify-content: center; align-items: center;">
            <p>Máte už účet?</p>
            <a asp-action="Login" class="login-button">Přihlásit se</a>
        </div>

    </form>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}