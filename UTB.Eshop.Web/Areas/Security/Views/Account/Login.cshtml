@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

@section Styles
{
    <link rel="stylesheet" href="~/css/login.css" />
}

<div id="logreg-forms">
    <form asp-action="Login" method="post" class="form-signin">
        <h1 style="text-align:center">Přihlásit se</h1>
        <hr>
        @{
            if (Model?.LoginFailed == true)
            {
                <div class="text-danger">Přihlášení se nezdařilo</div>
            }
        }

        <div asp-validation-summary="All" class="text-danger"></div>

        <input asp-for="Username" type="text" id="inputUsername" class="form-control" placeholder="Jméno" autofocus="">
        <span asp-validation-for="Username" class="text-danger"></span>
        <input asp-for="Password" type="password" id="inputPassword" class="form-control" placeholder="Heslo">
        <span asp-validation-for="Password" class="text-danger"></span>
        <br />

        <div class="text-center">
            <button class="btn btn-success btn-block" type="submit"><i class="fas fa-sign-in-alt"></i> Přihlásit se </button>
        </div>
        <br />
        <br />
        <hr>
        <div class="login-prompt" style="text-align: center; display: flex; justify-content: center; align-items: center;">
            <p>Ještě u nás nejsi?</p>
            <a asp-action="Register" class="login-button">Zaregistrovat se</a>
        </div>

    </form>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}